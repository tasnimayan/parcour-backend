{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*", "src/types", "prisma/**/*", "prisma"],
  "exclude": ["node_modules", "dist"]
}
